if [ "$TEMPLATEDIR" = "" ] ; then
   TEMPLATEDIR="~/.iimage"
fi

FOOTER_TEMPLATE="$DATADIR/footer_template.html"
HEAD_TEMPLATE_START="$DATADIR/head_template_start.html"
